{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es6",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist",  // Đây là thư mục xuất tệp biên dịch
    "baseUrl": "./",
    "incremental": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "jest"]
  },
  "exclude": ["dist", "node_modules"]
  
}
